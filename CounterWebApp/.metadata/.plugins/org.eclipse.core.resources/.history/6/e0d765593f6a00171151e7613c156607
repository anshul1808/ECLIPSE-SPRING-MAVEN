package com.mkyong.controller;

import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;

@Controller
public class BaseController {

	private static int counter = 0;	
	private static final String VIEW_INDEX = "index"; //name of index.jsp file 
	private final static org.slf4j.Logger logger = LoggerFactory.getLogger(BaseController.class);

	@RequestMapping(value = "/", method = RequestMethod.GET)  
	public String welcome(ModelMap model) {

		model.addAttribute("message", "Welcome");
		model.addAttribute("counter", ++counter);
		logger.debug("[welcome] counter : {}", counter);

		// Spring uses InternalResourceViewResolver and return back index.jsp
		return VIEW_INDEX;

	}
	
	// Take Input from URL and print on browser
	
	@RequestMapping(value = "/{name}", method = RequestMethod.GET)	
	public String welcomeName(@PathVariable String name, ModelMap model) 
	{

		model.addAttribute("message", "Welcome " + name + " 123 " );
		model.addAttribute("counter", ++counter);
		logger.debug("[welcomeName] counter : {}", counter);
		return VIEW_INDEX;

	}
	
	@RequestMapping(value = "/{name1}",method = RequestMethod.GET)
	public String queryage(@RequestParam("age") String studentage, ModelMap model)
	{
		model.addAttribute("message", "Age is = "+ studentage + " isage" );
		model.addAttribute("counter", ++counter);
		logger.debug("[queryage] counter : {}", counter);
		return VIEW_INDEX;

	}
	

	
}